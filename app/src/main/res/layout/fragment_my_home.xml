<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                tools:src="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/fixhome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="TextView2" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_like_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="찜한 일정" />

            <TextView
                android:id="@+id/profile_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="프로필" />

            <TextView
                android:id="@+id/profile_paln"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내가 만든 일정" />

            <TextView
                android:id="@+id/profile_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="설정" />
            <TextView
                android:id="@+id/profile_commant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="댓글 단 글" />
            <TextView
                android:id="@+id/profile_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="자주 묻는 질문(FAQ)" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>